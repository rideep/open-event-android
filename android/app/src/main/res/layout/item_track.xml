<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:baselineAligned="false"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/padding_large">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/item_image_view"
        android:layout_height="@dimen/item_image_view"
        android:contentDescription="@string/item_track" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_margin_large"
        android:layout_marginLeft="@dimen/layout_margin_large"
        android:layout_marginRight="@dimen/layout_margin_large"
        android:layout_marginStart="@dimen/layout_margin_large"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_extra_small"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_extra_large"
            tools:text="Track Title" />

        <TextView
            android:id="@+id/no_of_sessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/track_rounded_corner"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            tools:text="No of sessions" />
    </LinearLayout>
</LinearLayout>
